    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "description": "Личный проект «Пинк» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.1.x",
    "browser-sync": "^2.27.10",
    "css-mqpacker": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-csso": "^3.0.1",
    "gulp-htmlmin": "^5.0.1",
